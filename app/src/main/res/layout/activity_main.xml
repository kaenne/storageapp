<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Заголовок -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Operations"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <!-- Поле для отображения данных -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="#E0E0E0"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvData"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:hint="File content will appear here"
            android:inputType="textMultiLine"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Кнопка записи -->
    <Button
        android:id="@+id/btnWriteFile"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Write to File"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6200EE"
        android:layout_marginBottom="16dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <!-- Кнопка чтения -->
    <Button
        android:id="@+id/btnReadFile"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Read from File"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6200EE"
        android:layout_marginBottom="24dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <!-- Кнопка выхода -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Logout"
        android:textColor="#6200EE"
        android:background="@android:color/transparent"
        android:layout_gravity="end"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>
</LinearLayout>